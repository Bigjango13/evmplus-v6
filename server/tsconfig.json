{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"outDir": "./server/dist",
		"noImplicitAny": true,
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"alwaysStrict": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true,
		"lib": [
			"es2015",
			"es2017",
			"es2015.promise",
			"es5",
			"esnext.asynciterable",
			"es6",
			"es2018",
			"dom",
			"esnext"
		],
		"pretty": true,
		"removeComments": true,
		"typeRoots": ["./types", "./node_modules/@types"],
		"rootDir": "..",
		"baseUrl": ".",
		"rootDirs": [
			"..",
			"."
		],
		"allowSyntheticDefaultImports": false,
		"experimentalDecorators": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "../lib/*.ts"],
	"lib": [
		"es2015",
		"es2017",
		"es2015.promise",
		"es5",
		"esnext.asynciterable"
	]
}
