{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Server",
			"program": "${workspaceFolder}/dist/index.js",
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"node_modules/**/*.js",
				"<node_internals>/**/*.js"
			],
			"env": {
				"NODE_ENV": "development"
			}
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Launch Server (nodemon)",
			"processId": "${command:PickProcess}",
			"restart": true,
			"protocol": "inspector",
			"skipFiles": [
				"node_modules/**/*.js",
				"async_hooks.js",
				"inspector_async_hook.js"
			]

		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Test",
			"program": "${workspaceFolder}/dist/test.js",
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"node_modules/**/*.js",
				"async_hooks.js",
				"inspector_async_hook.js"
			],
			"env": {
				"NODE_ENV": "development"
			}
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Server (Nodemon)",
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"program": "${workspaceFolder}/dist/index.js",
			"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
			"runtimeArgs": [
				"--inspect"
			],
			"skipFiles": [
				"node_modules/**/*.js",
				"async_hooks.js",
				"inspector_async_hook.js"
			],
			"env": {
				"NODE_ENV": "development"
			}
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Jest All",
			"args": [
				"--inspect-brk",
				"${workspaceFolder}/node_modules/.bin/jest",
				"--runInBand"
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Jest Current File",
			"args": [
				"--inspect-brk",
				"${workspaceFolder}/node_modules/.bin/jest",
				"--runInBand",
				"${relativeFile}"
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"windows": {
				"program": "${workspaceFolder}/node_modules/jest/bin/jest",
			}
		}
	]
}