{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start client",
			"type": "npm",
			"script": "start",
			"path": "client/",
			"problemMatcher": [],
			"isBackground": true,
			"group": "build"
		},
		{
			"type": "typescript",
			"tsconfig": "packages/server/tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"label": "tsc: watch - packages/server/tsconfig.json"
		},
		{
			"type": "typescript",
			"tsconfig": "packages/apis/tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"label": "tsc: watch - packages/apis/tsconfig.json"
		},
		{
			"type": "typescript",
			"tsconfig": "packages/auto-client-api/tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"label": "tsc: watch - packages/auto-client-api/tsconfig.json"
		},
		{
			"type": "typescript",
			"tsconfig": "packages/common-lib/tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"label": "tsc: watch - packages/common-lib/tsconfig.json"
		},
		{
			"type": "typescript",
			"tsconfig": "packages/discord-bot/tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"label": "tsc: watch - packages/discord-bot/tsconfig.json"
		},
		{
			"type": "typescript",
			"tsconfig": "packages/server/tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"label": "tsc: watch - packages/server/tsconfig.json"
		},
		{
			"type": "typescript",
			"tsconfig": "packages/server-common/tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"label": "tsc: watch - packages/server-common/tsconfig.json"
		},
		{
			"label": "Build client",
			"dependsOn": [
				"tsc: watch - packages/apis/tsconfig.json",
				"tsc: watch - packages/common-lib/tsconfig.json",
				"Start Client"
			]
		},
		{
			"label": "Build server - with Discord",
			"dependsOn": [
				"tsc: watch - packages/server/tsconfig.json",
				"tsc: watch - packages/server-common/tsconfig.json",
				"tsc: watch - packages/common-lib/tsconfig.json",
				"tsc: watch - packages/discord-bot/tsconfig.json"
			]
		},
		{
			"label": "Build server - without Discord",
			"dependsOn": [
				"tsc: watch - packages/server/tsconfig.json",
				"tsc: watch - packages/server-common/tsconfig.json",
				"tsc: watch - packages/common-lib/tsconfig.json"
			]
		},
		{
			"label": "Build all",
			"dependsOn": [
				"tsc: watch - packages/apis/tsconfig.json",
				"tsc: watch - packages/auto-client-api/tsconfig.json",
				"tsc: watch - packages/common-lib/tsconfig.json",
				"tsc: watch - packages/discord-bot/tsconfig.json",
				"tsc: watch - packages/server/tsconfig.json",
				"tsc: watch - packages/server-common/tsconfig.json",
				"Start Client"
			],
			"problemMatcher": [
				"$tsc-watch"
			],
			"isBackground": true
		}
	]
}
