{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"path": "packages/apis/",
			"problemMatcher": [
				"$tsc-watch"
			],
			"label": "Build apis (watch)",
			"isBackground": true
		},
		{
			"label": "Start webpack-dev-server",
			"type": "npm",
			"script": "start-quiet",
			"path": "packages/client/",
			"detail": "BROWSER=none npm start",
			"problemMatcher": {
				"owner": "typescript",
				"fileLocation": "absolute",
				"pattern": [
					{
						"regexp": "TypeScript (error|warning) in (.*)?\\((\\d+),(\\d+)\\):",
						"severity": 1,
						"file": 2,
						"line": 3,
						"column": 4
					},
					{
						"regexp": "(.*)?\\.\\s+TS(\\d+)",
						"message": 1,
						"code": 2
					}
				],
				"background": {
					"activeOnStart": false,
					"beginsPattern": {
						"regexp": "(Compiling.*?|Compilation .*?starting)"
					},
					"endsPattern": {
						"regexp": "(Compiled .*?successfully|Compilation .*?finished|Compiled .*?warnings)"
					}
				}
			},
			"dependsOn": [
				"Build common-lib (watch)",
				"Build apis (watch)"
			],
			"isBackground": true,
		},
		{
			"type": "npm",
			"script": "watch",
			"path": "packages/common-lib/",
			"problemMatcher": [
				"$tsc-watch"
			],
			"label": "Build common-lib (watch)",
			"isBackground": true
		},
		{
			"type": "npm",
			"script": "watch",
			"path": "packages/discord-bot/",
			"problemMatcher": [
				"$tsc-watch"
			],
			"label": "Build discord-bot (watch)",
			"isBackground": true
		},
		{
			"type": "npm",
			"script": "watch",
			"path": "packages/server-common/",
			"problemMatcher": [
				"$tsc-watch"
			],
			"label": "Build server-common (watch)",
			"isBackground": true
		},
		{
			"label": "Build server - without Discord",
			"dependsOn": [
				"Build common-lib (watch)",
				"Build server-common (watch)"
			],
			"type": "npm",
			"script": "watch",
			"path": "packages/server",
			"problemMatcher": [
				"$tsc-watch"
			],
			"isBackground": true
		},
		{
			"label": "Build server - with Discord",
			"dependsOn": [
				"Build common-lib (watch)",
				"Build server-common (watch)",
				"Build discord-bot (watch)"
			],
			"type": "npm",
			"script": "watch",
			"path": "packages/server/",
			"problemMatcher": [
				"$tsc-watch"
			],
			"isBackground": true
		},
	]
}
