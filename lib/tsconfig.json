{
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
		"noImplicitAny": true,
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"alwaysStrict": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true,
		"pretty": true,
		"removeComments": true,
		"preserveSymlinks": true,
		"sourceMap": true,
		"baseUrl": ".",
		"rootDir": ".",
		"composite": true
	},
	"exclude": ["node_modules"],
	"lib": ["es2015", "es2017", "es2015.promise", "es5"],
	"files": ["./index.ts"]
}
