{
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
		"noImplicitAny": true,
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"alwaysStrict": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true,
		"pretty": true,
		"removeComments": true,
		"preserveSymlinks": true,
		"sourceMap": true,
		"typeRoots": ["./types", "./node_modules/@types"],
		"baseUrl": ".",
		"rootDir": "."
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"],
	"lib": ["es2015", "es2017", "es2015.promise", "es5"],
	"files": ["../lib/index.d.ts"]
}
