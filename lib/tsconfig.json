{
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
		"noImplicitAny": true,
		"allowUnreachableCode": false,
		"sourceMap": true,
		"allowUnusedLabels": false,
		"alwaysStrict": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true,
		"pretty": true,
		"declaration": true,
		"removeComments": true,
		"preserveSymlinks": true,
		"outDir": "dist",
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"typeRoots": ["./types", "./node_modules/@types"],
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"plugins": [{ "transform": "auto-client-api" }]
	},
	"exclude": [
		"node_modules",
		"dist",
		"**/*.d.ts",
		"node_modules/**/*.ts",
		"node_modules/**/*.d.ts"
	],
	"lib": ["es2015", "es2017", "es2015.promise", "es5"],
	"include": ["src/**/*.ts"]
}
